  <body class="pb justify-content-center">
    <div class="container wb mt-2 shadow-sm">
      <div class="cosmbg-top"></div>
      <div class="row justify-content-center">
        <div class="col-10 col-sm-6 px-2">
          <h1>cosm.os</h1>
          <h4>Designing our future communities</h4>
          <p>by Ruby Quail</p>
        </div>
      </div>
      <div class="cosmbg-bottom"></div>
    </div>
    <div class="container wb mt-2 shadow-sm">
      <div class="cosmbg-top"></div>
      <div class="row mx-3">
        <h2>Project Flow</h2>
      </div>
      <a
        href="https://ruby-quail-portfolio-images.s3-ap-southeast-2.amazonaws.com/cosm.os/cosmosGraph.pdf"
        ><img
          class="img-fluid"
          src="https://ruby-quail-portfolio-images.s3-ap-southeast-2.amazonaws.com/cosm.os/cosmosGraph.jpg"
          alt="graph"
          srcset=""
      /></a>

      <div class="cosmbg-bottom"></div>
    </div>
    <div class="container wb mt-2 shadow-sm">
      <div class="cosmbg-top"></div>
      <div class="row justify-content-center">
        <div class="col-sm-6 col-10 px-2">
          <h2>Goal</h2>
          <h4>
            Enable people to experiment with social situations, communities, and
            identities, and by doing so develop insight into the social systems
            that make up our digital lives
          </h4>
        </div>
      </div>
      <div class="cosmbg-bottom"></div>
    </div>
    <div class="container wb mt-2 shadow-sm">
      <div class="cosmbg-top"></div>
      <h2 class="mx-2">Friendship Exercise</h2>
      <div class="row justify-content-center">
        <div
          class="col px-2 mx-4"
          id="ffe"
          style="height: 500px; background-color: #222222; border-radius: 0.4em;color: white;"
        >
          click here to load interactive element
        </div>
        <script>
          (() => {
            const p = document.querySelector('#ffe');

            const cF = () => {
              p.textContent = '';
              p.append(document.createElement('iframe'));
              const frame = p.querySelector('iframe');
              frame.setAttribute(
                'src',
                'http://rubyquail.design/FriendshipFirstExercise'
              );
              frame.setAttribute('width', '100%');
              frame.setAttribute('height', '100%');
              frame.setAttribute(
                'style',
                'overflow: hidden; width:100%;height: 100%;border-radius: 0.4em;'
              );
              frame.setAttribute('scrolling', 'no');
              frame.setAttribute('frameborder', '0');
              p.setAttribute('style', 'height:800px');
              p.removeEventListener('click', cF);
            };
            p.addEventListener('click', cF);
          })();
        </script>
      </div>
      <div class="cosmbg-bottom"></div>
    </div>
    <div class="container wb mt-2 shadow-sm">
      <div class="cosmbg-top"></div>
      <h2 class="mx-2">Graph Visualisation Experiment</h2>
      <div class="row justify-content-center">
        <div
          class="col px-2 mx-4"
          id="replace-force"
          style="height: 500px; background-color: #222222; border-radius: 0.4em;color: white;"
        >
          click here to load interactive element
        </div>
        <script>
          const p = document.querySelector('#replace-force');

          const cF = () => {
            p.textContent = '';
            p.append(document.createElement('iframe'));
            const frame = p.querySelector('iframe');
            frame.setAttribute('src', 'http://rubyquail.design/forceGraphVis');
            frame.setAttribute('width', '100%');
            frame.setAttribute('height', '100%');
            frame.setAttribute(
              'style',
              'overflow: hidden; width:100%;height: 100%;border-radius: 0.4em;'
            );
            frame.setAttribute('scrolling', 'no');
            frame.setAttribute('frameborder', '0');
            p.setAttribute('style', 'height:500px');
            p.removeEventListener('click', cF);
          };
          p.addEventListener('click', cF);
        </script>
      </div>
      <div class="cosmbg-bottom"></div>
    </div>
    <div class="container wb mt-2 shadow-sm">
      <div class="cosmbg-top"></div>
      <h2 class="mx-2">Friendship Exercise</h2>
      <div class="row justify-content-center">
        <div
          class="col px-2 mx-4"
